{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "copyNativeLib",
            "type": "shell",
            "command": "cp",
            "args": [
                "${workspaceRoot}/VideoNativeLibs/libRtspSlicer.so",
                "${workspaceRoot}/RtspListener/bin/x64/Debug/netcoreapp2.2/"
            ],
            "dependsOn": "dotnetBuild",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },

        {
            "label": "dotnetBuild",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "build",
                "/p:Platform=x64"
            ],
            "dependsOn": "nativeBuild"
        },

        {
            "label": "nativeBuild",
            "type": "shell",
            "command": "make",
            "args": [
                "-C",
                "${workspaceRoot}/VideoNativeLibs/"
            ],
            "dependsOn": "nativeClean"
        },

        {
            "label": "nativeClean",
            "type": "shell",
            "command": "make",
            "args": [
                "clean",
                "-C",
                "${workspaceRoot}/VideoNativeLibs/"
            ]
        }
    ]
}
